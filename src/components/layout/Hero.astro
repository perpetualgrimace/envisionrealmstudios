---
import RetinaImg from "../RetinaImg.astro";

const {slug, props = {}} = Astro.props;
const {title, headline, subhead, showButton} = props;
---

<div class="hero">
  <div class="hero-img-wrapper">
    <RetinaImg className="hero-img u-mh-auto" file={`hero/${slug}-hero`} extension="jpg" width={1320} height={slug === "home" ? 760 : 600} />
  </div>

  <div class="hero-caption u-mh-auto u-text-l-c">
    <h1 class="hero-title u-mb-xl">{headline || title}</h1>
    <p class="hero-paragraph u-font-md">{subhead}</p>
    {showButton &&
      <a href="contact" class="button">Get started</a>
    }
  </div>
</div>

<style is:global lang="scss">
	@import '../../styles/global';

  .hero {
    @include container;
  }

  .hero-img {
    height: auto;
    aspect-ratio: attr(width) / attr(height);
  }

  .hero-img-wrapper:after {
    @include pseudo;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 33%;
    width: 100%;
    background-image: linear-gradient(to bottom, transparent 0%, $black 100%);
  }

  .hero-caption {
    padding: $sp-xl;
    width: 55rem;
    max-width: 100%;
    margin-top: -12rem;
    z-index: 1;
  }
</style>